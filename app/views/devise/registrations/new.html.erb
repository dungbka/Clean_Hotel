<head>
  <title>Sign up</title>
</head>
<body class="body-signup">
  <div align="center" class="main-signup">
    <p class="su">Sign Up</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.text_field :name, autofocus: true, placeholder: "Full Name", class: "text-field" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email adress", class: "mail" %>
      <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "pass" %>
      <%= f.password_field :password_confirmation, autofocus: true, placeholder: "password confirmation", class: "pass" %>
      <%= f.submit "Signup", class: "submit" %>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
    <p align="center" class="mb">
      <strong>-</strong>
      Designed By
      <a href="https://www.khaledmneimneh.me" target="_blank">
        <span class="mb-2">Khaled Mneimneh</span>
      </a>
    </p>
  </div>
</body>
