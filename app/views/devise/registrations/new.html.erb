<head>
  <title>サインアップ</title>
</head>
<body class="body-signup">
  <div align="center" class="main-signup">
    <p class="su">サインアップ</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム", class: "text-field" %>
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "mail" %>
      <%= f.password_field :password, autofocus: true, placeholder: "パスワード", class: "pass" %>
      <%= f.password_field :password_confirmation, autofocus: true, placeholder: "パスワード認証", class: "pass" %>
      <%= f.submit "サインアップ", class: "submit" %>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
</body>
